<div class="container">
  <h5> List of Appointments for <%= @patient.name %></h5>
  <% @patient.appointments.each do |p| %>
      <div class="card card-container">
        <div class="card-content">
          <p>Name: <%= p.patient.name %></p>
          <p>Doctor's Name: <%= p.check_scheduler %></p>
          <p>Reason: <%= p.reason %></p>
          <p>Appointment Details: <%= p.appointment_date %> <%= p.appointment_time.try(:strftime, "%I.%M %P") %></p>
        </div>
        <div class="card-action">
          <%= link_to "Delete Appointment", patient_appointment_path(p.patient, p), method: :delete, data: { confirm: "Are you sure?"} %>
          <%= link_to "Edit Appointment", edit_patient_appointment_path(p.patient, p) %>
        </div>
      </div>
  <% end %>
  <div class="link-container waves-effect waves-light btn-large">
    <%= link_to 'New Appointment', new_patient_appointment_path(patient_id:  @patient.id) %>
  </div>
  <vr></vr>
  <div class="home-container waves-effect waves-light btn-large">
    <%= link_to 'Back', patients_path %>
  </div>
</div>

