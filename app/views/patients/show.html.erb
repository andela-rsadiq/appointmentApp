<% @patient.appointments.each do |p| %>
    <p>Name: <%= p.patient.name %></p>
    <p>Doctor's Name: <%= p.check_scheduler %></p>
    <p>Reason: <%= p.reason %></p>
    <p>Appointment Details: <%= p.appointment_date %> <%= p.appointment_time.try(:strftime, "%I.%M %P") %></p>
    <%= link_to "Delete Appoinment", patient_appointment_path(p.patient, p), method: :delete, data: { confirm: "Are you sure?"} %>
    <br>
    <br>
<% end %>
<ul>
  <li><%= link_to 'New Appointment', new_patient_appointment_path(patient_id:  @patient.id) %></li>
  <li><%= link_to 'Back', patients_path %></li>
</ul>
